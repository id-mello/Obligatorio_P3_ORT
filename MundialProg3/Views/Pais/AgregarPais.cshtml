@model MundialProg3.Models.ViewModelPaises

@{
    ViewData["Title"] = "AgregarPais";
}

<h1>AgregarPais</h1>

<h4>ViewModelPais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarPais" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsoAlfa3" class="control-label"></label>
                <input asp-for="IsoAlfa3" class="form-control" />
                <span asp-validation-for="IsoAlfa3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PbiPerCapita" class="control-label"></label>
                <input asp-for="PbiPerCapita" class="form-control" />
                <span asp-validation-for="PbiPerCapita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poblacion" class="control-label"></label>
                <input asp-for="Poblacion" class="form-control" />
                <span asp-validation-for="Poblacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenBandera" class="control-label"></label>
                <input asp-for="ImagenBandera" class="form-control" />
                <span asp-validation-for="ImagenBandera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodasLasRegiones" class="control-label"></label>
                 <select id="IdRegion" name="IdRegion" multiple>
                    @foreach (var a in Model.TodasLasRegiones)
                    {
                        <option value="@a.Id">@a.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@ViewBag.Error 


<div>
    <a asp-action="Index">Back to List</a>
</div>

