@model IEnumerable<LogicaDeNegocio.EntidadesNegocio.Pais>

@{
    ViewData["Title"] = "ListarPaises";
}

<h1>ListarPaises</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsoAlfa3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PbiPerCapita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poblacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsoAlfa3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PbiPerCapita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poblacion)
                </td>
                <td>
                        <img src="~/Imagenes/@item.Imagen" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar país", "UpdatePais", new { idPais=item.Id }) |
                    @Html.ActionLink("Ver país", "BuscarPorIsoAlfa3", new {  codAlfa3=item.IsoAlfa3  }) |
                    @Html.ActionLink("Eliminar país", "BajaPais", new { idPais=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>

@ViewBag.Error 